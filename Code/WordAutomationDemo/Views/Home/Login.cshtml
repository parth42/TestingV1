@using WordAutomationDemo.Common
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Triyo Login</title>
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <!-- Bootstrap -->
    <link href="@Url.Content("~/CSS/Common/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/CSS/Common/bootstrap-theme.css")" rel="stylesheet">
    <!-- Custom -->
    <link href="@Url.Content("~/CSS/Common/fonts.css")" rel="stylesheet">
    <link href="@Url.Content("~/CSS/Custom/Site.css")" rel="stylesheet">
    <!----Header-css---->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="@Url.Content("~/Scripts/Common/html5shiv.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/respond.min.js")"></script>
    <![endif]-->
    <script src="@Url.Content("~/Scripts/Common/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Custom/AdminLogin.js")"></script>
    <style type="text/css">
        .primaryButton {
            background-color: #4ca0dd;
            border: 1px solid transparent;
            border-radius: 3px;
            color: #fff;
            text-decoration: none;
            font-size: 14px;
            font-weight: normal;
            line-height: 1.42857143;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            touch-action: manipulation;
            -ms-touch-action: manipulation;
            cursor: pointer;
            display: block;
            width: 100%;
            padding: 6px 12px;
        }

        .primaryTxt {
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 1px;
            color: #4C5454;
            padding: 6px 12px;
            width: 100%;
            text-align: left;
            font-family: "open sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-size: 14px;
            line-height: 1.42857143;
        }

        .formInputRow {
            margin: 0px 0px 15px;
        }

        .primaryTxt:focus {
            border-color: #4ca0dd;
            outline: 0;
        }

        footer {
            background: none;
        }
    </style>
</head>
<body onload="javascript:document.getElementById('UserName').focus();">
    <header>
        <div class="container-fluid">
            <div class="col-lg-12 clearfix">
                <div class="row">
                    <div class="col-sm-12 col-md-12 text-center">
                        <a href="#" class="login-logo">
                            @*<h3>
                                    Triyo
                                </h3>*@
                            <img src="@Url.Content("~/CSS/images/login-logo.png")" alt="Triyo" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    @using (Html.BeginForm("Login", "Home", "POST"))
    {
        <div id="wrapper" class="container-fluid login-bg-image">
            <section id="content">
                <div class="col-lg-12 clearfix">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12">
                            <div class="login-box">
                                <h1>Welcome to Institution Demo</h1>
                                <div class="validation-summary-errors" id="messageLogin" style="display: none;">
                                </div>
                                @if (Request.QueryString["Msg"] != null && Request.QueryString["Msg"].ToString() == "Unauthorize")
                                {
                                    <div class="validation-summary-errors" id="authorisemsg">
                                        <ul>
                                            <li>
                                                @Html.Encode(String.Format(Messages.NotAuthorized))
                                            </li>
                                        </ul>
                                    </div>
                                }
                                @if (Request.QueryString["Msg"] != null && Request.QueryString["Msg"].ToString() == "Logout" && Request.Form["btnSumit"] == null)
                                {
                                    <div class="validation-summary-errors" id="logoutmsg">
                                        <ul><li>@Html.Encode(String.Format(Messages.SuccessLogOut))</li></ul>

                                    </div>
                                }

                                @if (Request.QueryString["Msg"] != null && Request.QueryString["Msg"].ToString() == "Reset")
                                {
                                    <div class="gree-box" id="msgUnAuthorized">
                                        <ul>
                                            <li>@Html.Encode(String.Format(Messages.SuccessResetPassword))</li>
                                        </ul>
                                    </div>
                                }
                                @if (Request.QueryString["Msg"] != null && Request.QueryString["Msg"].ToString().ToLower() == "changed")
                                {
                                    <div class="gree-box" id="msgUnAuthorized">
                                        <ul>
                                            <li>@Html.Encode(String.Format(Messages.SuccessChanged, "Password"))</li>
                                        </ul>
                                    </div>
                                }

                                @Html.ValidationSummary(false, "")
                                <div style="padding-bottom:0;">
                                    <div class="formInputRow">
                                        @*<label for="exampleInputEmail1">Username</label>*@
                                        <input name="UserName" type="text" id="UserName" placeholder="Username" class="primaryTxt" />
                                    </div>
                                    <div class="formInputRow">
                                        @*<label for="exampleInputPassword1">Password</label>*@
                                        <input name="UserPassword" type="password" id="UserPassword" placeholder="Password" class="primaryTxt" />
                                    </div>
                                    <div>
                                        @*<a href="#">Forgot Password ?</a>*@
                                        @*<input name="btnSumit" type="submit" id="btnSumit" value="Login" class="btn pull-right btn-primary" onclick="javascript: return validateLogin();" />*@
                                        <input name="btnSumit" type="submit" id="btnSumit" value="Login" class="primaryButton" style="width: 90px; background-color: #4ca0dd;" onclick="javascript: return validateLogin();" />
                                        @*<a href="javascript:finish ();" id="primaryButton">Login</a>*@
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    }
    <footer>
        <div class="clearfix">
            Powered by <a target="_blank" href="http://www.triyosoft.com/">Triyo</a>
        </div>
    </footer>
</body>
</html>